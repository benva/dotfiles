#!/bin/bash

# zsh
cp ~/.zshrc ~/dotfiles/.zshrc

# git
cp ~/.gitconfig ~/dotfiles/.gitconfig

# neovim
cp -R ~/.config/nvim/ ~/dotfiles/nvim/

# lazygit
cp ~/Library/Application\ Support/lazygit/config.yml ~/dotfiles/config.yml

# kitty
cp ~/.config/kitty/kitty.conf ~/dotfiles/kitty.conf
cp ~/.config/kitty/gruvbox_dark.conf ~/dotfiles/gruvbox_dark.conf

echo "Finished update!"
